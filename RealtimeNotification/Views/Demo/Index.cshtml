@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Mini Messenger</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/chat.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 d-flex p-0">
        <!-- Sidebar -->
        <div class="col-3 border-end bg-light overflow-auto" id="sidebar">
            <div class="p-3 border-bottom">
                <input type="text" id="searchBox" class="form-control form-control-sm"
                       placeholder="Tìm kiếm trên Messenger">
            </div>
            <div id="conversationList" class="list-group list-group-flush"></div>
        </div>

        <!-- Chat window -->
        <div class="col-9 d-flex flex-column h-100">
            <!-- Header -->
            <div class="d-flex align-items-center p-3 border-bottom bg-white">
                <div class="icon-avatar me-2">
                    <i class="bi bi-person-fill"></i>
                </div>
                <div>
                    <div class="fw-bold" id="chatWith">Chưa chọn đoạn chat</div>
                    <div class="text-muted small">Đang hoạt động</div>
                </div>
            </div>
            <!-- Messages -->
            <div id="chatBox" class="flex-grow-1 overflow-auto p-3 bg-light d-flex flex-column"></div>

            <!-- Input -->
            <div class="p-3 border-top bg-white">
                <div class="input-group">
                    <input type="text" class="form-control" id="message" placeholder="Aa">
                    <button class="btn btn-primary" onclick="sendMessage()">Gửi</button>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="username" value="" />
    <input type="hidden" id="toUser" value="" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="/js/chat.js"></script>
</body>
</html>
